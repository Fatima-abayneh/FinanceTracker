@model FinanceTracker.Models.RecurringTransaction
@using FinanceTracker.Models

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">RecurringTransaction</h4>
                        <p class="card-description"> Create </p>
                        <form class="forms-sample" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <select asp-for="Type" class="form-select form-select-sm" id="exampleFormControlSelect3" asp-items="Html.GetEnumSelectList<TransactionType>()">
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount"></label>
                                <input asp-for="Amount" class="form-control">
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId"></label>
                                <select asp-for="CategoryId" class="form-select form-select-sm" id="exampleFormControlSelect3" asp-items="ViewBag.CategoryId">
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RecurrenceType"></label>
                                <select asp-for="RecurrenceType" class="form-select form-select-sm" id="exampleFormControlSelect3" asp-items="Html.GetEnumSelectList<RecurrenceType>()">
                                </select>
                                <span asp-validation-for="RecurrenceType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NextOccurrence"></label>
                                <input asp-for="NextOccurrence" class="form-control">
                                <span asp-validation-for="NextOccurrence" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btn btn-primary me-2">
                            <button class="btn btn-light"><a asp-action="Index">Back to List</a></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
